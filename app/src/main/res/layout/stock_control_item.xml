<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="10"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvItemName"
            style="@style/MediumTextStyleGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Name" />

        <TextView
            android:id="@+id/tvItemType"
            style="@style/MediumTextStyleGray"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Type" />

        <TextView
            android:id="@+id/tvItemDate"
            style="@style/MediumTextStyleGray"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Date" />

        <TextView
            android:id="@+id/tvItemDelieveryDue"
            style="@style/MediumTextStyleGray"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Dilevery date" />

        <TextView
            android:id="@+id/tvItemNumber"
            style="@style/MediumTextStyleGray"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Number" />

        <TextView
            android:id="@+id/tvItemOutlet"
            style="@style/MediumTextStyleGray"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Outlet" />

        <TextView
            android:id="@+id/tvItemSource"
            style="@style/MediumTextStyleGray"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Source" />

        <TextView
            android:id="@+id/tvItemStatus"
            style="@style/MediumTextStyleGray"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Status" />

        <TextView
            android:id="@+id/tvItemItems"
            style="@style/MediumTextStyleGray"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Items" />

        <TextView
            android:id="@+id/tvItemTotalCost"
            style="@style/MediumTextStyleGray"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Total Cost" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:src="@drawable/pencil"></ImageView>
    </LinearLayout>

</LinearLayout>