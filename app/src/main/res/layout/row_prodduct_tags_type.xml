<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/side_margin"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvItemProductName"
            style="@style/MediumTextStyleGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Jimmys Roasting Beans" />

        <TextView
            android:id="@+id/tvItemNoOfProducts"
            style="@style/MediumTextStyleGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:layout_gravity="right"
            android:text="12" />

        <TextView
            android:id="@+id/tvItemViewProduct"
            style="@style/MediumTextStyleGray"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="View Products" />

        <ImageView
            android:id="@+id/tvItemEditProduct"
            android:layout_width="0dp"

            android:layout_height="20dp"
            android:layout_weight="0.3"
            android:src="@drawable/pencil" />


        <ImageView
            android:id="@+id/tvItemDeleteProduct"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3"
            android:src="@drawable/pencil" />
    </LinearLayout>
</LinearLayout>