<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/product_iconarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignTop="@+id/productnumber"
        android:layout_alignBottom="@+id/productnumber"
        android:text="@string/icon_rightArrow"
        android:textSize="@dimen/medium_textsize" />

    <TextView
        android:id="@+id/productnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/product_iconarrow"
        android:layout_toRightOf="@+id/product_iconarrow"
        android:paddingRight="10dp"
        android:text=" 1 "
        android:textSize="@dimen/medium_textsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/productnumber"
        android:layout_toRightOf="@+id/productnumber"
        android:text="TextView"
        android:layout_toLeftOf="@+id/product_price"
        android:maxLines="2"
        android:textSize="@dimen/medium_textsize"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/productType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productName"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/productnumber"
        android:layout_toRightOf="@+id/productnumber"
        android:text="TextView"
        android:textSize="@dimen/small_textsize" />


    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/product_deleteicon"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="109.00 "
        android:textSize="@dimen/medium_textsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_deleteicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/product_price"
        android:layout_alignBottom="@+id/product_price"
        android:gravity="center"
        android:text="@string/icon_delete"
        android:textSize="@dimen/medium_textsize"
        android:textStyle="bold" />


</RelativeLayout>